---
type Props = {
  title?: string;
  description?: string;
};

const {
  title = "Personal Site",
  description = "技術メモとツールをまとめた個人サイト",
} = Astro.props as Props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style>
      :root {
        --bg: #1e293b;
        --bg-soft: #24304a;
        --fg: #e5e7eb;
        --accent: #38bdf8;
        --accent-soft: rgba(56, 189, 248, 0.18);
        --border-soft: #334155;
        --max-width: 960px;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          sans-serif;
        background: radial-gradient(circle at top, #334155 0%, #0f172a 90%);
        color: var(--fg);
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .shell {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      header {
        border-bottom: 1px solid var(--border-soft);
        background: rgba(15, 23, 42, 0.9);
        backdrop-filter: blur(8px);
      }

      .header-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
      }

      .site-title {
        font-weight: 700;
        letter-spacing: 0.08em;
        font-size: 0.9rem;
        text-transform: uppercase;
      }

      .nav {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
        opacity: 0.9;
      }

      .nav a {
        padding: 0.25rem 0.5rem;
        border-radius: 999px;
      }

      .nav a:hover {
        background: rgba(15, 23, 42, 0.9);
        text-decoration: none;
      }

      main {
        flex: 1;
      }

      .main-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2.5rem 1.5rem 3rem;
      }

      footer {
        border-top: 1px solid var(--border-soft);
        font-size: 0.8rem;
        color: #9ca3af;
        background: #020617;
      }

      .footer-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 1rem 1.5rem 1.5rem;
        display: flex;
        justify-content: space-between;
        gap: 1rem;
        flex-wrap: wrap;
      }
    </style>
  </head>

  <body>
    <div class="shell">
      <header>
        <div class="header-inner">
          <a href="/" class="site-title">PERSONAL SITE</a>
          <nav class="nav" aria-label="Main navigation">
            <a href="/about">About</a>
            <a href="/projects">Projects</a>
            <a href="/tools">Tools</a>
            <a href="/notes">Notes</a>
            <a href="/contact">Contact</a>
          </nav>
        </div>
      </header>

      <main>
        <div class="main-inner">
          <slot />
        </div>
      </main>

      <footer>
        <div class="footer-inner">
          <div>© {new Date().getFullYear()} Your Name</div>
          <div>Built with Astro</div>
        </div>
      </footer>
    </div>
  </body>
</html>
